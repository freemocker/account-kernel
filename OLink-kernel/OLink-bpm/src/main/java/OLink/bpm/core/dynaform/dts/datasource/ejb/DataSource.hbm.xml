<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="OLink.bpm.core.dynaform.dts.datasource.ejb.DataSource"
        table="T_DATASOURCE"
        lazy="false"
    >

        <id
            name="id"
            column="ID"
            type="java.lang.String"
            length="100"
        >
            <generator class="assigned">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-DataSource.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="dbType"
            type="int"
            update="true"
            insert="true"
            column="DBTYPE"
        />

        <property
            name="driverClass"
            type="java.lang.String"
            update="true"
            insert="true"
            column="DRIVERCLASS"
        />

        <property
            name="name"
            type="java.lang.String"
            update="true"
            insert="true"
            column="NAME"
        />

        <property
            name="url"
            type="java.lang.String"
            update="true"
            insert="true"
            column="URL"
        />

        <property
            name="password"
            type="java.lang.String"
            update="true"
            insert="true"
            column="PASSWORD"
        />

        <property
            name="username"
            type="java.lang.String"
            update="true"
            insert="true"
            column="USERNAME"
        />

        <property
            name="sortId"
            type="java.lang.String"
            update="true"
            insert="true"
            column="SORTID"
        />
         
        <property 
        	name="poolsize"
        	type="java.lang.String"
        	update="true"
        	insert="true"
        	column="POOLSIZE"
        />
        
        <property 
        	name="timeout"
        	type="java.lang.String"
        	update="true"
        	insert="true"
        	column="TIMEOUT"
        />

        <property
            name="applicationid"
            type="java.lang.String"
            update="true"
            insert="true"
            column="APPLICATIONID"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-DataSource.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
